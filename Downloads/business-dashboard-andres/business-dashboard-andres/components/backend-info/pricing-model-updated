const mongoose = require('mongoose');

const pricingPVSchema = new mongoose.Schema({
  name: {
    type: String,
    required: true,
    trim: true
  },
  type: {
    type: String,
    enum: ['fixed', 'percentage', 'dynamic'],
    default: 'fixed'
  },
  basePrice: {
    type: Number,
    required: true,
    min: 0,
    default: 0
  },
  discountIncrement: {
    type: Number,
    default: 0
  },
  description: {
    type: String,
    default: ''
  },
  validFrom: {
    type: Date,
    default: Date.now
  },
  validUntil: {
    type: Date,
    default: null
  },
  pv: {
    type: mongoose.Schema.Types.ObjectId,
    ref: 'ProductVariable',
    required: true
  },
  active: {
    type: Boolean,
    default: true
  }
}, {
  timestamps: true,
  collection: 'pricingPV'
});

// Indexes
pricingPVSchema.index({ name: 'text' });
pricingPVSchema.index({ basePrice: 1 });
pricingPVSchema.index({ pv: 1 });
pricingPVSchema.index({ type: 1 });
pricingPVSchema.index({ validFrom: 1 });
pricingPVSchema.index({ validUntil: 1 });

module.exports = mongoose.model('PricingPV', pricingPVSchema);
